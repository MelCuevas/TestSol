@{
    ViewData["Title"] = "Editar Empleado";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>

    <div id="error-message" class="" role="alert"></div>

    <form>
        <div class="form-group row">
            <label for="txtId" class="col-sm-2 col-form-label">Id</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="txtId" value="@Model.Id">
            </div>
        </div>
        <div class="form-group row">
            <label for="txtNombre" class="col-sm-2 col-form-label">Nombre</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtNombre" value="@Model.Nombre">
            </div>
        </div>
        <div class="form-group row">
            <label for="txtApellidoPaterno" class="col-sm-2 col-form-label">Apellido Paterno</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtApellidoPaterno" value="@Model.ApellidoPaterno">
            </div>
        </div>
        <div class="form-group row">
            <label for="txtApellidoMaterno" class="col-sm-2 col-form-label">Apellido Materno</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtApellidoMaterno" value="@Model.ApellidoMaterno">
            </div>
        </div>
        <div class="form-group row">
            <label for="txtArea" class="col-sm-2 col-form-label">Area</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtArea" value="@Model.Area">
            </div>
        </div>
        <div class="form-group row">
            <label for="txtFechaNacimiento" class="col-sm-2 col-form-label">Fecha Nacimiento</label>
            <div class="col-sm-10">
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="txtFechaNacimiento" value="@Model.FechaNacimiento">
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="txtSueldo" class="col-sm-2 col-form-label">Sueldo</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtSueldo" value="@Model.Sueldo">
            </div>
        </div>
    </form>
    <br />
    <button id="delete-btn" type="button" class="btn btn-danger">Eliminar</button>
    <button id="cancel-btn" type="button" class="btn btn-secondary">Cancelar</button>
    <button id="editar-empleado" type="button" class="btn btn-primary">Guardar</button>
</div>